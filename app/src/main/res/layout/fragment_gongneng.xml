<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/linear_jichugongneng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/text_jichugongneg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linear_gongneng"
            android:padding="@dimen/dp_15"
            android:text="@string/jichugongneng"
            android:textColor="@color/pink_high"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linear_jichugongneng_tubiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_24"
            android:paddingEnd="@dimen/dp_24"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_zhiliuzhijian"
                style="@style/image_jichugongneng"
                android:src="@drawable/lvzhou_zhuliushijian" />

            <ImageView

                style="@style/image_jichugongneng"
                android:src="@drawable/buhang" />

            <ImageView
                style="@style/image_jichugongneng"
                android:src="@drawable/relitu" />

            <ImageView
                style="@style/image_jichugongneng"
                android:src="@drawable/yongdudu" />

            <ImageView
                style="@style/image_jichugongneng"
                android:src="@drawable/fangxiang" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_juecegongneng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_jichugongneng"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_jjuecegongeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linear_gongneng"
            android:padding="@dimen/dp_15"
            android:text="@string/juecegongneng"
            android:textColor="@color/text_belowblue"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linear_juecegongneng_tubiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_2"
            android:visibility="gone">


            <ImageView
                style="@style/image_juecegongneng"
                android:src="@drawable/police" />

            <ImageView
                style="@style/image_juecegongneng"
                android:src="@drawable/shou" />

            <ImageView
                style="@style/image_juecegongneng"
                android:src="@drawable/trafficstatus" />

            <ImageView
                style="@style/image_juecegongneng"
                android:src="@drawable/gongjiao" />

            <ImageView
                style="@style/image_juecegongneng"
                android:src="@drawable/jiuhuche" />

            <ImageView
                style="@style/image_juecegongneng"
                android:src="@drawable/yiyuanhospital16" />


            <ImageView
                style="@style/image_juecegongneng"
                android:src="@drawable/tingchechang1" />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_ceshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="刷新数据" />
</RelativeLayout>
